<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/splashContainer"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@android:color/transparent">

	<ViewStub android:id="@+id/splashImageStub"
		android:inflatedId="@+id/splashImageStubInf"
		android:layout="@layout/splash_image_layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent" />

    <FrameLayout android:id="@+id/progressFrameLay"
        android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/splash_ad_background">
		<ProgressBar
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		   	style="?android:attr/progressBarStyleLarge"
		   	android:background="@null"/>
	</FrameLayout>

</RelativeLayout>
